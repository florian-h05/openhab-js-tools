{
  "name": "@hotzware/openhab-tools",
  "version": "2.0.0",
  "description": "Tools for the openHAB JavaScript Automation Add-On.",
  "keywords": [
    "openHAB",
    "smarthome"
  ],
  "license": "EPL-2.0",
  "author": "Florian Hotze",
  "main": "src/index.js",
  "types": "types/openhab-tools.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/florian-h05/openhab-js-tools.git"
  },
  "scripts": {
    "test": "npm run lint",
    "docs": "rm -Rf ./docs/* && jsdoc --configure jsdoc.conf.json && mv ./docs/$npm_package_name/$npm_package_version/* ./docs/ && rm -Rf ./docs/$npm_package_name/$npm_package_version",
    "deploy": "npm test && npm run docs",
    "lint": "npx standardx | snazzy",
    "fix-codestyle": "npx standardx --fix"
  },
  "dependencies": {
    "openhab_rules_tools": "^1.1.1"
  },
  "devDependencies": {
    "docdash": "^2.0.1",
    "jsdoc": "^4.0.2",
    "jsdoc-tsimport-plugin": "^1.0.5",
    "openhab": "^1.2.3",
    "snazzy": "^9.0.0",
    "standardx": "^7.0.0",
    "tsc": "^2.0.4"
  },
  "private": false
}
